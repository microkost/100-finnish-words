<Page
    x:Class="_100words.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="Auto" Height="Auto">

    <RelativePanel Name="MainWindow">
        <CommandBar x:Name="CommandStripe" HorizontalAlignment="Stretch" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignTopWithPanel="True">
            <AppBarButton x:Name="ButtonRefresh" Icon="Refresh" Label="Refresh" Click="Button_Click" />
        </CommandBar>
        <Viewbox RelativePanel.Below="CommandStripe" RelativePanel.AlignHorizontalCenterWithPanel="True">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="wFI" Text="Word FIN" TextAlignment="Center"/>
                <TextBlock x:Name="wEN" Text="Word ENG" TextAlignment="Center"/>
                <TextBlock x:Name="wCZ" Text="Word CZE" TextAlignment="Center"/>
            </StackPanel>
        </Viewbox>
    </RelativePanel>
</Page>
