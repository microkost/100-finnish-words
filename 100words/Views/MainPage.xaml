<Page
    x:Class="_100words.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="640" Height="480" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Grid x:Name="MainPageWindow" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="640" Height="480">
        <Rectangle Fill="Azure"></Rectangle>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="ButtonRefresh" Icon="Refresh" Label="Refresh" Click="Button_Click"/>
        </CommandBar>
        <TextBlock x:Name="textMain" HorizontalAlignment="Center" Margin="4,50,4,297" TextWrapping="Wrap" Text="Sana" VerticalAlignment="Center" Height="133" Width="632" RenderTransformOrigin="0.5,0.5" FontSize="80" TextAlignment="Center" FontStyle="Normal"/>
        <TextBlock x:Name="textLang1" HorizontalAlignment="Center" Margin="2,188,2,236" TextWrapping="Wrap" Text="Word" VerticalAlignment="Center" Height="56" Width="636" FontSize="40" TextAlignment="Center"/>
        <TextBlock x:Name="textLang2" HorizontalAlignment="Center" Margin="4,269,4,155" TextWrapping="Wrap" Text="Slovo" VerticalAlignment="Center" Height="56" Width="632" FontSize="40" TextAlignment="Center"/>
    </Grid>
</Page>
